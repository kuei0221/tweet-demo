<% provide(:title, "Home") %>

<% if login? %>
  <div class = "row">
    <div class="col-4">
        <%= render "shared/error_messages", object: @micropost %>
        <%= render "shared/user_info", user: current_user %>
        
        <div class="card mt-3">
          <div class="body">
            <%= render "microposts/microposts_form" %>
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <h3 class="text-center">Micropost Feed</h3>
        <%= render "shared/feed" %>
      </div>
    </div>
  </div>
<% else %>
  <%= link_to "Login in", login_path %>
  <%= link_to "Haven't sign up?", signup_path %>
<% end %>