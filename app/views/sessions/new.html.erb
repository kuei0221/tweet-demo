<% provide(:title, "login") %>

<%= form_for(:session, url: login_path) do |f| %>
 
  <%= f.label :email %>
  <%= f.text_field :email %>
  
  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :remember_me %>
  <%= f.check_box :remember_me %>

  <%= link_to "Forget Password?", new_password_reset_path %>

  <%= f.submit "Login" %>
<% end %>