<% provide(:title, "login") %>
<div class="row text-center justify-content-center">
  <div class="col-3">
    <%= form_for(:session, url: login_path) do |f| %>
     
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>
        <%= link_to "Forget Password?", new_password_reset_path %>
      </div>  
    
      <div class="form-check text-left mb-3">
        <%= f.label :remember_me, class: "form-check-label pl-4"   %>
        <%= f.check_box :remember_me, class: "form-check-input ml-2" %>
      </div>
    
      <div class="form-group">
        <%= f.submit "Login", class: "btn btn-lg btn-block btn-primary" %>
      </div>
    <% end %>
    
    <div class="row justify-content-center">
      
      <p>--------------------------------------------</p>
    
      <div class="col-6">
        <%= render "facebook_login" %>
      </div>
      <div class="col-6">
        <%= render "google_login" %>
      </div>

    </div>

  </div>
</div>