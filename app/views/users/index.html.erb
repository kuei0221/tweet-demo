<% provide(:title, "All Users") %>

<div class="row justify-content-center">
  <div class="col-10">
    <h1>All Users</h1>
    <%= will_paginate(@users) %>
    <table class="table table-hover">
      <thead class="thead-light">
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Micropost</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <%= render @users %>
      </tbody>
    </table>
  </div>
</div>
