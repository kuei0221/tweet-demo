<div class="card my-3">
  <div class="card-body">
    <h5 class="card-title">
      <%= image_tag micropost.user.avatar, style: "height: 50px" if micropost.user.avatar.attached? %>
      <%= micropost.user.name %>
      <small class="text-muted">
        ï¼Ž <%= time_ago_in_words(micropost.updated_at) %> ago
      </small>
    </h5>
    <p class="card-text">
      <%= micropost.content %>
    </p>
    <%= image_tag micropost.picture if micropost.picture.attached? %>

  </div>
  <div class="card-footer">
    <%= link_to "comment", "#", class: "btn btn-sm btn-secondary mr-3"%>
    <%= link_to "shared", "#", class: "btn btn-sm btn-secondary mr-3" %>
    <%= link_to "like", "#", class: "btn btn-sm btn-secondary" %>
  </div>
</div>